<?xml version="1.0" encoding="utf-8"?>
<tmtgx>
  <IOCP>
    <!--num of accept event to set-->
    <acceptnum>10</acceptnum>
  </IOCP>
  
  <serverconfig>
    <TCP>1</TCP>                          <!--use tcp mode for transfer traffic-->
    <UDP>0</UDP>                          <!--use udp mode for transfer traffix-->
    <default_ip>127.0.0.1</default_ip>
    <default_port>7777</default_port>    
    <async_mode>1</async_mode>
    <longconnectenable>1</longconnectenable> <!-- long connect is for TCP Server like game server-->
  </serverconfig>
  
  <database_configuration>
    <redis_on>1</redis_on>
    <SQL_on>1</SQL_on>
  </database_configuration>  
  
  
  <log>
    <enable>1</enable>
    <loglevel>ALL</loglevel>              <!--loglevel:ALL->DEBUG-INFO-TRACE-->
  </log>
  
</tmtgx>
